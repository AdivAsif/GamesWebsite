#container
  %p#notice= notice

  %p
    %b Name:
    = @game.name
  %p
    %b Cover:
    = image_tag("/assets/#{@game.cover}", height: '20%', width: '20%')
  %p
    %b Genre:
    = @game.genre
  %p
    %b Rating:
    = @game.rating
  %p
    %b Summary:
    = @game.summary

  - if user_signed_in?
    %p
      %b Add #{@game.name} into your list?
      = link_to ' Add Game', new_game_list_path(game_id: @game)
    %p
      %b Set the rating:
      = link_to ' Set It', edit_game_path(game_id: @game)
  - else
    %p
      %b Log in to add #{@game.name} to your list
    %p
      %b Log in to rate this game

  = link_to 'Back', games_path
