= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :cover
    = f.text_field :cover
  .field
    = f.label :genre
    = f.text_field :genre
  .field
    = f.label :release_date
    = f.text_field :release_date
  .field
    = f.label :rating
    = f.number_field :rating
  .field
    = f.label :aggregated_rating
    = f.text_field :aggregated_rating
  .field
    = f.label :platform
    = f.text_field :platform
  .field
    = f.label :summary
    = f.text_field :summary
  .actions
    = f.submit 'Save'
