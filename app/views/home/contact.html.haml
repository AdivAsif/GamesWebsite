#container
  .center
    %h1= t('.title')
    %p= t('.contact_us')

    = form_tag request_contact_path, :id => 'contact_id', method: 'post' do
      = label_tag :name, t('.name')
      = text_field_tag :name, '', id: 'name', title: t('.enter_name'), size: 30
      
      = label_tag :email, t('.email')
      = email_field_tag :email, '', id: 'email', title: t('.enter_email'), size: 50

      = label_tag :message, t('.message')
      = text_field_tag :message, '', id: 'message', title: t('.enter_message'), size: 100

      = submit_tag t('.submit'), id:'submit'